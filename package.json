{
  "name": "rn-number-input-repo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev:web": "npm -w @demo/web run dev",
    "dev:docs": "npm -w @demo/docs run dev",
    "dev:expo": "npm -w @demo/expo run start -- -c",
    "build": "npm -w @rn-number-input/core run build",
    "build:docs": "npm -w @demo/docs run build",
    "preview:docs": "npm -w @demo/docs run preview",
    "deploy:docs": "npm run build:docs && gh-pages -d apps/docs/.vitepress/dist --nojekyll",
    "typecheck": "npm -w @rn-number-input/core run typecheck && npm -w @demo/web run typecheck",
    "lint": "npm -w @rn-number-input/core run lint && npm -w @demo/web run lint",
    "test:core": "npm -w @rn-number-input/core run test",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "gh-pages": "^6.3.0"
  }
}
